{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "MinGW",
            "command": "C:\\Program Files\\MinGW\\bin\\g++.exe",
            "args": [
                "-municode",
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",
                "-ld2d1",
                "-luser32",
                "-mwindows",
                "-std=c++17",
                "-o",
                "${fileDirname}\\app.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "MVSC",
            "command": "cl.exe",
            "args": [
                "/DUNICODE",
                "${workspaceFolder}\\*.cpp",
                "/Fo${workspaceFolder}\\objects\\",
                "/Fe${workspaceFolder}\\out\\app.exe",
                "/Zi",
                "/EHsc",
                "/std:c++17",
                "/link",
                "/subsystem:windows",
                "user32.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}